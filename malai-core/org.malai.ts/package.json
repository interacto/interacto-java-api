{
  "name": "org.malai.ts",
  "description": "The typescript implementation of Malai",
  "version": "3.1.0-alpha.0",
  "author": "Arnaud Blouin",
  "repository": "https://github.com/arnobl/Malai.git",
  "license": "GPL2",
  "main": "./dist/widgetbinder.js",
  "types": "./dist/src/index.d.ts",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "barrelsby": "^1.0.1",
    "jest": "^22.4.3",
    "rollup": "^0.59.4",
    "rollup-plugin-commonjs": "latest",
    "rollup-plugin-node-resolve": "latest",
    "rollup-plugin-typescript2": "latest",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "generates-barrels": "barrelsby -c ./barrelsby-config.json --delete",
    "compile": "tsc",
    "all": "npm run clean && npm run compile && npm run coverage && npm run lint",
    "lib-buid": "npm run all && npm run build",
    "clean": "rm -rf target/* coverage/*",
    "test": "jest",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "coverage": "jest --coverage --collectCoverageFrom=target/src*/**/*.js"
  },
  "dependencies": {
    "typescript-logging": "^0.5.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/target"
    ]
  }
}
